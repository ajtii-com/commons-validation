{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "src/",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "es5",
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types/"]
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
